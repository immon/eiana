    <bean id="fakeMailReceiver" class="org.iana.rzm.mail.test.FakeMailReceiver"/>

    <bean id="fakeMailsProcessor" class="org.iana.rzm.mail.processor.MailsProcessorBean" scope="session">
        <constructor-arg index="0" ref="fakeMailReceiver"/>
        <constructor-arg index="1" ref="mailParser"/>
        <constructor-arg index="2" ref="authenticationServiceBean"/>
        <constructor-arg index="3" ref="GuardedSystemTransactionService"/>
    </bean>
-->
</beans>